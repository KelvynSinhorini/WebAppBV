@model WebAppBV.ViewModels.TransactionViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Transações</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<input type="hidden" asp-for="TransactionId" />*@
            @Html.HiddenFor(model => model.TransactionId)
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Local" class="control-label"></label>
                <input asp-for="Local" class="form-control" />
                <span asp-validation-for="Local" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfParcel" class="control-label"></label>
                <input asp-for="NumberOfParcel" class="form-control" />
                <span asp-validation-for="NumberOfParcel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalParcel" class="control-label"></label>
                <input asp-for="TotalParcel" class="form-control" />
                <span asp-validation-for="TotalParcel" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="OnlyThisMonth" /> @Html.DisplayNameFor(model => model.OnlyThisMonth)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Owners" class="control-label"></label>
                <select name="Owners" class="custom-select" multiple>
                    @foreach (var item in (List<string>)ViewBag.Owners)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="Owners" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        // await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
